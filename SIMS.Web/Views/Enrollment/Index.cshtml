@model IEnumerable<SIMS.Web.Models.Course>

@{
    ViewData["Title"] = "Course Registration";
}

<h1>Course Registration</h1>
<p>Select from the available courses below to enroll.</p>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Course Code</th>
            <th>Course Name</th>
            <th>Credits</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseCode</td>
                <td>@course.CourseName</td>
                <td>@course.Credits</td>
                <td>
                    <form asp-action="Enroll" asp-route-courseId="@course.Id" method="post">
                        <button type="submit" class="btn btn-primary btn-sm">Enroll</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-4">
    <a asp-controller="StudentDashboard" asp-action="Index" class="btn btn-secondary">Back to My Dashboard</a>
</div>