@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="p-5 mb-4 bg-light rounded-3 text-center shadow-sm">
    <div class="container-fluid py-5">
        <h1 class="display-4 fw-bold">Welcome to SIMS</h1>
        <p class="fs-4">Your modern Student Information Management System, built with ASP.NET Core.</p>
</div>

<div class="row text-center">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <i class="bi bi-person-fill fs-1 text-primary"></i>
                <h4 class="card-title mt-3">For Students</h4>
                <p class="card-text">View your enrolled courses, check your grades, and manage your academic profile with ease.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <i class="bi bi-people-fill fs-1 text-success"></i>
                <h4 class="card-title mt-3">For Faculty</h4>
                <p class="card-text">Manage your assigned courses, view student rosters, and update grades efficiently.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <i class="bi bi-gear-fill fs-1 text-info"></i>
                <h4 class="card-title mt-3">For Administrators</h4>
                <p class="card-text">Oversee the entire system, manage students, faculty, and courses from a centralized dashboard.</p>
            </div>
        </div>
    </div>
</div>