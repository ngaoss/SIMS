@model IEnumerable<SIMS.Web.Models.Course>

@{
    ViewData["Title"] = "My Dashboard";
}

<div class="d-flex align-items-center mb-3">
    <i class="bi bi-person-video fs-1 text-primary me-3"></i>
    <div>
        <h1 class="display-5 mb-0">@ViewData["Title"]</h1>
        <p class="lead text-muted">Manage your assigned courses and student grades.</p>
    </div>
</div>
<hr />

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0"><i class="bi bi-journal-check"></i> My Assigned Courses</h4>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Course Code</th>
                            <th>Course Name</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td><strong>@course.CourseCode</strong></td>
                                <td>@course.CourseName</td>
                                <td class="text-center">
                                    <a asp-action="CourseDetails" asp-route-id="@course.Id" class="btn btn-primary">
                                        <i class="bi bi-people-fill"></i> Manage Roster
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center p-4">
                <i class="bi bi-info-circle-fill fs-2 text-info"></i>
                <h5 class="mt-3">No Courses Assigned</h5>
                <p class="text-muted">You do not have any courses assigned to you at the moment.</p>
            </div>
        }
    </div>
</div>