@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="display-4">@ViewData["Title"]</h1>
<hr />

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">Total Students</h5>
                <p class="card-text fs-4">@ViewBag.TotalStudents</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">Total Faculty</h5>
                <p class="card-text fs-4">@ViewBag.TotalFaculty</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">Total Courses</h5>
                <p class="card-text fs-4">@ViewBag.TotalCourses</p>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Manage Faculty</h3>
        <a asp-controller="Faculty" asp-action="Create" class="btn btn-success">Add New Faculty</a>
    </div>
    <div class="card-body">
        <div id="faculty-list-placeholder">
            <p>Loading faculty...</p>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Manage Courses</h3>
        <a asp-controller="Courses" asp-action="Create" class="btn btn-success">Add New Course</a>
    </div>
    <div class="card-body">
        <div id="course-list-placeholder">
            <p>Loading courses...</p>
        </div>
    </div>
</div>
<div class="card shadow-sm mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-people-fill"></i> Manage Students</h4>
        <a asp-controller="Students" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle-fill"></i> Add New Student
        </a>
    </div>
    <div class="card-body">
        <div id="student-list-placeholder" class="table-responsive">
            <div class="text-center p-4">
                <div class="spinner-border text-info" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading student list...</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
     <script>
        function loadPartialView(placeholderId, url) {
            $(placeholderId).load(url, function (response, status, xhr) {
                if (status == "error") {
                    var friendlyMessage = "<div class='alert alert-danger'>Sorry, but there was an error loading this content. Status: " + xhr.status + " " + xhr.statusText + "</div>";
                    $(placeholderId).html(friendlyMessage);
                }
            });
        }

        $(document).ready(function () {
            loadPartialView('#faculty-list-placeholder', '@Url.Action("GetFacultyList", "AdminDashboard")');

            loadPartialView('#course-list-placeholder', '@Url.Action("GetCourseList", "AdminDashboard")');
            
            loadPartialView('#student-list-placeholder', '@Url.Action("GetStudentList", "AdminDashboard")');
        });
    </script>
}