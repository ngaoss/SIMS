@model IEnumerable<SIMS.Web.Models.Faculty>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Department</th>
            <th>User Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Department)</td>
                <td>@Html.DisplayFor(modelItem => item.User.Email)</td>
                <td>
                    <a asp-controller="Faculty" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Faculty" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Faculty" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>