@model SIMS.Web.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<h1>@ViewData["Title"]</h1>
<h4>@Model.CourseName</h4>
<hr />

<div class="card shadow-sm mb-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-info-circle-fill"></i> Course Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Course Code</dt>
            <dd class="col-sm-9">@Model.CourseCode</dd>

            <dt class="col-sm-3">Course Name</dt>
            <dd class="col-sm-9">@Model.CourseName</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Credits</dt>
            <dd class="col-sm-9">@Model.Credits</dd>

            <dt class="col-sm-3">Instructor</dt>
            <dd class="col-sm-9">
                @if (Model.Instructor != null)
                {
                    @Model.Instructor.FullName
                }
                else
                {
                    <span class="text-muted">Not Assigned</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-people-fill"></i> Enrolled Students</h5>
    </div>
    <div class="card-body">
        @if (Model.Enrollments != null && Model.Enrollments.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Student Code</th>
                            <th>Full Name</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enrollment in Model.Enrollments)
                        {
                            <tr>
                                <td>@enrollment.Student.StudentCode</td>
                                <td>@enrollment.Student.FullName</td>
                                <td>
                                    @if (enrollment.Grade.HasValue)
                                    {
                                        @enrollment.Grade
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not Graded</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-0">
                No students are currently enrolled in this course.
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Edit
    </a> 
    <a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Back to Dashboard
    </a>
</div>